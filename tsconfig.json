{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
        "paths": {
        "*": ["src/*"],
        "@screens/*": ["./src/screens/*"],
        "@navigation/*": ["./src/navigation/*"],
        "@modules/*": ["./src/modules/*"],
        "@components/*": ["./src/components/*"],
        "@utils/*": ["./src/utils/*"],
        "@domain/*": ["./src/domain/*"],
      },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }